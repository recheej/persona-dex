<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>

    <style name="PersonaStatsTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PersonaStatsTextLabel">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PersonaStatsTextValue" parent="PersonaStatsTextLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">3</item>
    </style>

    <style name="FusionHeaderLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="GridDivider">
        <item name="android:background">#26FFFFFF</item>
    </style>

</resources>
