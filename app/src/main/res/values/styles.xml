<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>

    <style name="PersonaStatsTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PersonaStatsTextLabel">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PersonaStatsTextValue" parent="PersonaStatsTextLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">3</item>
    </style>

    <style name="FusionHeaderLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="GridDivider">
        <item name="android:background">#26FFFFFF</item>
    </style>

    <style name="GridDividerDark">
        <item name="android:background">#000000</item>
    </style>

    <style name="FusionListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:weightSum">3</item>
    </style>

    <style name="FusionDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="DenseListTextPrimary">
        <item name="android:text">13sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="DenseListTextSecondary">
        <item name="android:text">13sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>
