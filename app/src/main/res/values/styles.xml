<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="textBody">@style/TextBody</item>
        <item name="textBodyTitle">@style/TextBodyTitle</item>
        <item name="textCaption">@style/TextCaption</item>
        <item name="textHeadline">@style/TextHeadline</item>
        <item name="statsBackground">@color/colorAccentLight</item>
        <item name="defaultTextColor">@color/textColorWhite</item>
        <item name="android:textColorPrimary">?defaultTextColor</item>
        <item name="pageBackground">?colorAccent</item>
        <item name="toolbarBackground">?colorPrimary</item>
        <item name="android:dialogTheme">@style/PersonaDialogAlert</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="PreferenceThemeOverlay">
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="preferenceStyle">@style/Preference</item>
        <item name="preferenceInformationStyle">@style/Preference.Information</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList</item>
    </style>

    <style name="PersonaStatsTheme" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?statsBackground</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PersonaStatsTextLabel">
        <item name="android:textAppearance">?textBodyTitle</item>
    </style>

    <style name="PersonaStatsTextLabel.PersonaStatsTextValue">
        <item name="android:textAppearance">?textBody</item>
        <item name="android:textAlignment">3</item>
    </style>

    <style name="FusionHeaderLabel">
        <item name="android:textAppearance">?textBodyTitle</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="GridDivider">
        <item name="android:background">#26FFFFFF</item>
    </style>

    <style name="GridDividerDark">
        <item name="android:background">#000000</item>
    </style>

    <style name="FusionListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:weightSum">3</item>
    </style>

    <style name="FusionDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAppearance">?textCaption</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="TextBodyTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bodyTitleSize</item>
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="TextBody" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="TextHeadline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">?defaultTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="PersonaSpinnerDropdown" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:popupBackground">?pageBackground</item>
    </style>

    <style name="PersonaCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">?colorPrimary</item>
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="PersonaDialogAlert" parent="Theme.AppCompat.DayNight.Dialog.Alert">
<!--        <item name="colorPrimary">?colorPrimary</item>-->
<!--        <item name="colorAccent">?colorAccent</item>-->
        <item name="android:background">?pageBackground</item>
        <item name="android:textColorPrimary">?defaultTextColor</item>
    </style>

</resources>
