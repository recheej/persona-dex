<resources>

    <style name="ToolbarSubtitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="PreferenceThemeOverlay">
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="preferenceStyle">@style/Preference</item>
        <item name="preferenceInformationStyle">@style/Preference.Information</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList</item>
    </style>

    <style name="PersonaStatsTextLabel">
        <item name="android:textAppearance">?textBodyTitle</item>
    </style>

    <style name="PersonaStatsTextLabel.PersonaStatsTextValue">
        <item name="android:textAppearance">?textBody</item>
        <item name="android:textAlignment">3</item>
    </style>

    <style name="FusionHeaderLabel">
        <item name="android:textAppearance">?textBodyTitle</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="GridDivider">
        <item name="android:background">#26FFFFFF</item>
    </style>

    <style name="GridDividerDark">
        <item name="android:background">#000000</item>
    </style>

    <style name="FusionListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:weightSum">3</item>
    </style>

    <style name="FusionDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAppearance">?textCaption</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="TextBodyTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bodyTitleSize</item>
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="TextBody" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="TextHeadline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">?defaultTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="PersonaSpinnerDropdown" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:popupBackground">?dialogPageBackground</item>
    </style>

    <style name="PersonaCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="DropDownItemStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="textAppearanceSearchResultTitle">?textBodyTitle</item>
        <item name="textAppearanceSearchResultSubtitle">?textCaption</item>
    </style>

    <style name="PopUpMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">?dialogPageBackground</item>
    </style>

    <style name="OverFlowMenuStyle" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">?dialogPageBackground</item>
    </style>

    <style name="AutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">?dialogPageBackground</item>
    </style>

    <style name="SearchResultTitle" parent="TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:textAppearance">?textBodyTitle</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:colorBackground">?dialogPageBackground</item>
        <item name="android:buttonBarStyle">@style/AlertButtonBarStyle</item>
    </style>

    <style name="AlertButtonBarStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="background">?dialogPageBackground</item>
    </style>

    <style name="MaterialDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:colorBackground">?dialogPageBackground</item>
        <item name="colorSurface">?dialogPageBackground</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonBarStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonBarStyle</item>
    </style>

    <style name="DialogButtonBarStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:background">?dialogPageBackground</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">?textBodyTitle</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textAppearance">?textBody</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?defaultTextColor</item>
    </style>

    <style name="NeutralButtonBarStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorAccent</item>
    </style>


</resources>
