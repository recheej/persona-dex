<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="?pageBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPersonaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Persona Name"
                tools:ignore="HardcodedText"
                android:textAppearance="?textBodyTitle"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/textViewPrimaryShadowName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                tools:ignore="HardcodedText"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewArcana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arcana"
            android:textAppearance="?textCaption"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPersonaLevelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:text="@string/level_label"
                android:textAppearance="?textCaption"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textViewPersonaLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textAppearance="?textCaption"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>


    <include layout="@layout/grid_divider_horizontal" />
</LinearLayout>