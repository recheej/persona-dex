<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewPersonaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:paddingEnd="0dp"
        android:paddingStart="16dp"
        android:paddingTop="0dp"
        android:text="Persona Name"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textViewPersonaLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewPersonaName"
        android:layout_alignBottom="@+id/textViewPersonaName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:paddingEnd="16dp"
        android:paddingStart="0dp"
        android:text="123"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textViewArcana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewPersonaName"
        android:layout_marginBottom="10dp"
        android:paddingEnd="0dp"
        android:paddingStart="16dp"
        android:paddingTop="5dp"
        android:text="Arcana"
        android:textSize="13sp" />


</RelativeLayout>