<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewPersonaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Persona Name"
        style="@style/DenseListTextPrimary"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textViewArcana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arcana"
        style="@style/DenseListTextSecondary"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPersonaLevelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_label"
            style="@style/DenseListTextSecondary"
            android:paddingEnd="5dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/textViewPersonaLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234"
            style="@style/DenseListTextSecondary"
            tools:ignore="HardcodedText" />

    </LinearLayout>


</LinearLayout>